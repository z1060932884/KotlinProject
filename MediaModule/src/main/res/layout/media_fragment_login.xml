<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:background="@drawable/shape_login_bg_gradient">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/len_16"
        app:cardCornerRadius="@dimen/len_8"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/len_20"
        android:alpha="0"
        >
        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/base_text_light"
                android:text="手机号"
                android:textSize="@dimen/len_14"
                android:layout_marginTop="@dimen/len_20"
                />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_login_et_bg"
                android:padding="@dimen/len_8"
                android:layout_marginTop="@dimen/len_6"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="@dimen/len_14"
                android:textColor="@color/base_text_light"
                android:layout_marginTop="@dimen/len_16"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_login_et_bg"
                android:padding="@dimen/len_8"
                android:layout_marginTop="@dimen/len_6"
                />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/shape_login"
                android:gravity="center"
                android:text="登录"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="忘记了密码？"
                android:textColor="@color/base_text_light"
                android:textSize="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有账号？注册"
        android:textColor="@color/base_text_dark"
        android:layout_below="@+id/cd_login"
        android:layout_marginTop="30dp"
        android:alpha="0"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:tint="@color/grey_100"
        android:src="@drawable/media_ic_video" />
</RelativeLayout>